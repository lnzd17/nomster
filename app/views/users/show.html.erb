<div class="display-box">
  <div class="row">
    <div class="col-4">
      <%= image_tag 'user.png' %>
    </div>
  <div class="col-8">
    <h2> <%= @user.email %> </h2>
    <h5>Member Since:<%= @user.created_at.strftime("%B %d, %Y") %></h5>
    <h6><%= @user.comments.count %> total comments</h6>
    <h6><%= @user.comments.where(rating: "5_stars").count %> total 5 star reviews</h6>
  </div>
  </div>
<div class="clear"></div>
</div>

<h4>My Comments</h4>
<div class="row">
  <% @user.comments.each do |comment| %>
  <div class="col-12 col-sm-6">
     <h2 class="text-center"><%= link_to comment.place.name, place_path(comment.place) %></h2>
     <br/>
  <blockquote>
    <% if comment.humanized_rating.present? %>
      <b><%= comment.humanized_rating %></b> -
    <% end %>
    <%= comment.message %>
    <small><%= comment.user.email %></small>
  </blockquote>
</div>
  <% end %>
  </div>
